{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "'", "close": "'", "notIn": ["string"]}
    ],
    "surroundingPairs": [
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "'", "close": "'"}
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(public|private|protected|class|function|if|else|for|while|switch)\\b[^;]*$",
        "decreaseIndentPattern": "^\\s*(})\\}"
    }
}
